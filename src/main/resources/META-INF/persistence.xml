<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="gestionPortuaire" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<class>fr.univaix.iut.cas2.beans.Bateau</class>
	<class>fr.univaix.iut.cas2.beans.Emplacement</class>
	<class>fr.univaix.iut.cas2.beans.EnAttente</class>
	<class>fr.univaix.iut.cas2.beans.Modele</class>
	<class>fr.univaix.iut.cas2.beans.Occuper</class>
	<class>fr.univaix.iut.cas2.beans.Passager</class>
	<class>fr.univaix.iut.cas2.beans.Ponton</class>
	<class>fr.univaix.iut.cas2.beans.Port</class>
	<class>fr.univaix.iut.cas2.beans.Proprietaire</class>
	<class>fr.univaix.iut.cas2.beans.Resident</class>
	<class>fr.univaix.iut.cas2.beans.Sortir</class>
	<class>fr.univaix.iut.cas2.beans.Stationner</class>
	<class>fr.univaix.iut.cas2.beans.TypeEmplacement</class>
	

    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gestionPortuaire"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user"  value="monUser"/>
      <property name="javax.persistence.jdbc.password"  value="monPassword"/>
      <property name="eclipselink.ddl-generation"  value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
